@model Tienda.ViewModels.CategoriaViewModel

@{
    ViewData["Title"] = "Editar Categoria";
    Layout = "_Layout";
}

<h2>Editar Categoría</h2>

<form asp-action="Editar" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="CategoriaId" />

    <div class="mb-3">
        <label asp-for="Nombre" class="form-label"></label>
        <input asp-for="Nombre" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Descripcion" class="form-label"></label>
        <textarea asp-for="Descripcion" class="form-control"></textarea>
    </div>

    <div class="mb-3">
        <label>Imagen actual</label><br />
        @if (!string.IsNullOrEmpty(Model.Imagen))
        {
            <img src="~/images/categorias/@Model.Imagen" width="150" class="rounded" />
        }
        else
        {
            <span>No tiene imagen</span>
        }
    </div>

    <div class="mb-3">
        <label for="imagenArchivo" class="form-label">Nueva imagen (opcional)</label>
        <input type="file" name="imagenArchivo" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Estado" class="form-label">Estado</label>
        <select asp-for="Estado" class="form-select">
            <option value="true" selected="@(Model.Estado == true)">Activo</option>
            <option value="false" selected="@(Model.Estado == false)">Inactivo</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Guardar cambios</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
