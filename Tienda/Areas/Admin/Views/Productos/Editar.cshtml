@using Tienda.Areas.Admin.ViewModels
@model ProductosViewModels

@{
    ViewData["Title"] = "Editar Producto";
    Layout = "_Layout";
}

<h2 class="mb-4">Editar Producto</h2>

<form asp-action="Editar" method="post" enctype="multipart/form-data" class="border p-4 rounded shadow-sm bg-light">
    <input type="hidden" asp-for="ProductoId" />

    <div class="mb-3">
        <label asp-for="Codigo" class="form-label fw-bold"></label>
        <input asp-for="Codigo" class="form-control" placeholder="Código del producto" />
        <span asp-validation-for="Codigo" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="CodigoBarras" class="form-label fw-bold"></label>
        <input asp-for="CodigoBarras" class="form-control" placeholder="Código de barras" />
    </div>

    <div class="mb-3">
        <label asp-for="Nombre" class="form-label fw-bold"></label>
        <input asp-for="Nombre" class="form-control" placeholder="Nombre del producto" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Descripcion" class="form-label fw-bold"></label>
        <textarea asp-for="Descripcion" class="form-control" placeholder="Descripción del producto"></textarea>
    </div>

    <div class="mb-3">
        <label asp-for="CategoriaId" class="form-label fw-bold">Categoría</label>
        <select asp-for="CategoriaId" class="form-select" asp-items="ViewBag.CategoriaId"></select>
        <span asp-validation-for="CategoriaId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Precio" class="form-label fw-bold"></label>
        <input asp-for="Precio" class="form-control" placeholder="Precio en soles" />
        <span asp-validation-for="Precio" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="StockActual" class="form-label fw-bold"></label>
        <input asp-for="StockActual" class="form-control" placeholder="Cantidad en stock" />
        <span asp-validation-for="StockActual" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="UnidadMedida" class="form-label fw-bold">Unidad de Medida</label>
        <input asp-for="UnidadMedida" class="form-control" placeholder="Ejemplo: Unidad, Caja, Docena" />
    </div>

    <div class="mb-3">
        <label class="form-label fw-bold">Imagen actual:</label><br />
        @if (!string.IsNullOrEmpty(Model.ImagenPrincipal))
        {
            <img src="~/images/productos/@Model.ImagenPrincipal" alt="Imagen del producto" width="150" class="rounded shadow-sm border" />
        }
        else
        {
            <span class="text-muted">No tiene imagen</span>
        }
    </div>

    <div class="mb-3">
        <label asp-for="ImagenArchivo" class="form-label fw-bold">Nueva imagen (opcional)</label>
        <input asp-for="ImagenArchivo" type="file" class="form-control" accept="image/*" />
    </div>

    <div class="form-check mb-3">
        <input asp-for="Estado" class="form-check-input" type="checkbox" />
        <label asp-for="Estado" class="form-check-label fw-bold">Activo</label>
    </div>

    <div class="d-flex justify-content-between mt-4">
        <button type="submit" class="btn btn-success px-4">
            💾 Guardar cambios
        </button>
        <a asp-action="Index" class="btn btn-secondary px-4">
            ⬅ Volver
        </a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
