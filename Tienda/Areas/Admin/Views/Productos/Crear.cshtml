@using Tienda.Areas.Admin.ViewModels
@model ProductosViewModels

<h2>Nuevo Producto</h2>

@{
    ViewData["Title"] = "Crear Producto";
    Layout = "_Layout";
}

<form asp-action="Crear" method="post" enctype="multipart/form-data">
    <div class="mb-3">
        <label asp-for="Codigo" class="form-label"></label>
        <input asp-for="Codigo" class="form-control" />
        <span asp-validation-for="Codigo" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Nombre" class="form-label"></label>
        <input asp-for="Nombre" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Descripcion" class="form-label"></label>
        <textarea asp-for="Descripcion" class="form-control"></textarea>
    </div>

    <div class="mb-3">
        <label asp-for="CategoriaId" class="form-label">Categoría</label>
        <select asp-for="CategoriaId" asp-items="ViewBag.CategoriaId" class="form-select"></select>
    </div>

    <div class="mb-3">
        <label asp-for="Precio" class="form-label"></label>
        <input asp-for="Precio" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="StockActual" class="form-label"></label>
        <input asp-for="StockActual" class="form-control" />
    </div>

    <div class="mb-3">
        <label for="ImagenArchivo" class="form-label">Imagen</label>
        <input type="file" asp-for="ImagenArchivo" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="UnidadMedida" class="form-label"></label>
        <input asp-for="UnidadMedida" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Estado" class="form-label">Estado</label>
        <select asp-for="Estado" class="form-select">
            <option value="true">Activo</option>
            <option value="false">Inactivo</option>
        </select>
    </div>

    <button type="submit" class="btn btn-success">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
